<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<link rel="stylesheet" href="~/Content/MyStyles.css" type="text/css"/>*@
    <title>A Helping Hand</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", false);

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Image/HandIcon.png" alt="A Helping Hand" style="height: 70px; width: 90px; margin: 5px;"/>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            @*Can use User Roles to restrict views below!*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @style = "margin-top: .5em; padding-left: 1em; color: white; font-size: 2.25em; font-variant: small-caps; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" })</li>

                    @*@if (User.Identity.IsAuthenticated)
                        {
                        <li>@Html.ActionLink("Providers", "Index", "Provider", null, new { @style = "color: white; font-size: 1.75em; font-variant: small-caps; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" })</li>
                        }*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Here To Help?", "Index", "Help", null, new { @style = "margin-top: .5em; color: white; font-size: 2em; font-variant: small-caps; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" })</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Need Help?", "Index", "Customer", null, new { @style = "margin-top: .5em; color: white; font-size: 2em; font-variant: small-caps; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" })</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("About", "About", "Home", null, new { @style = "margin-top: .5em; color: white; font-size: 2em; font-variant: small-caps; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" })</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Contact", "Contact", "Home", null, new { @style = "margin-top: .5em; color: white; font-size: 2em; font-variant: small-caps; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - A Helping Hand - KP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
@section head{
    <style type="text/css">
    #handLogo {
        height: 10px;
        width: 10px;
    }
    </style>
}